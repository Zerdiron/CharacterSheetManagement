<Page x:Class="CharacterSheetManagement.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CharacterSheetManagement"
	  mc:Ignorable="d" d:DesignHeight="720" d:DesignWidth="800" Title="Menu" KeyDown="Page_KeyDown">
	
	<!-- Grille qui découpe le menu de la grille principale. -->
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="20" />
			<RowDefinition Height="700*" />
		</Grid.RowDefinitions>
		
		<!-- Menu -->
		<Menu Background="White" Height="20">
			<MenuItem Header="Fichier">
				<MenuItem x:Name="New" Header="Nouveau" Click="New_Click" InputGestureText="CTRL+N"/>
				<MenuItem x:Name="Open" Header="Ouvrir" Click="Open_Click" InputGestureText="CTRL+O"/>
				<MenuItem Height="5" IsEnabled="False"/>
				<MenuItem x:Name="Save" Header="Enregistrer" Click="Save_Click" InputGestureText="CTRL+S"/>
				<MenuItem Height="5" IsEnabled="False"/>
				<MenuItem x:Name="Delete" Header="Supprimer" Click="Delete_Click"/>
			</MenuItem>
			
			<MenuItem Header="Import/Export">
				<MenuItem x:Name="Import" Header="Importer" Click="Import_Click" InputGestureText="ALT+I"/>
				<MenuItem x:Name="Export" Header="Exporter" Click="Export_Click" InputGestureText="ALT+E"/>
			</MenuItem>

			<MenuItem x:Name="Edition" Header="Mode Lecture" Click="Edition_Click" InputGestureText="CTRL+E" HorizontalAlignment="Right"  />
		</Menu>
		
		<!-- Grille Principale. -->
		<Grid Grid.Row="1">
			<Grid.Background>
				<ImageBrush ImageSource="Background.jpg" Stretch="UniformToFill"/>
			</Grid.Background>
			<Grid.RowDefinitions>
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
				<RowDefinition Height="35*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="35*" />
				<ColumnDefinition Width="35*" />
				<ColumnDefinition Width="35*" />
				<ColumnDefinition Width="35*" />
				<ColumnDefinition Width="35*" />
				<ColumnDefinition Width="35*" />
				<ColumnDefinition Width="35*" />
				<ColumnDefinition Width="35*" />
				<ColumnDefinition Width="35*" />
				<ColumnDefinition Width="35*" />
				<ColumnDefinition Width="35*" />
				<ColumnDefinition Width="35*" />
				<ColumnDefinition Width="35*" />
				<ColumnDefinition Width="35*" />
				<ColumnDefinition Width="35*" />
				<ColumnDefinition Width="35*" />
				<ColumnDefinition Width="35*" />
				<ColumnDefinition Width="35*" />
				<ColumnDefinition Width="35*" />
				<ColumnDefinition Width="35*" />

			</Grid.ColumnDefinitions>

			<!-- ### INFORMATIONS PERSONNAGE ### -->
			<!-- Nom. -->
			<TextBox x:Name="Nom" IsReadOnly="True" Text="Tavernier" Grid.Column="7" Grid.ColumnSpan="6" Grid.RowSpan="2" FontStyle="Italic" FontSize="20" BorderBrush="Black" BorderThickness="1"    />
			<!-- Classe. -->
			<TextBox IsReadOnly="True" Text="Classe :" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="3" HorizontalAlignment="Left" FontWeight="Bold" />
			<TextBox x:Name="Classe" IsReadOnly="True" Text="Commoner" Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="3" FontStyle="Italic" />
			<!-- Level. -->
			<TextBox IsReadOnly="True" Text="Level :" Grid.Column="5" Grid.Row="3" FontWeight="Bold" />
			<TextBox x:Name="Level" IsReadOnly="True" Text="1" Grid.Column="6" Grid.ColumnSpan="1" Grid.Row="3" FontStyle="Italic" LostFocus="Global_LostFocus" />
			<!-- Race. -->
			<TextBox IsReadOnly="True" Text="Race :" Grid.Column="7" Grid.ColumnSpan="1" Grid.Row="3" FontWeight="Bold" />
			<TextBox x:Name="Race" IsReadOnly="True" Text="Humain" Grid.Column="8" Grid.ColumnSpan="3" Grid.Row="3" FontStyle="Italic"/>
			<!-- Alignement. -->
			<TextBox IsReadOnly="True" Text="Alignement :" Grid.Column="11" Grid.ColumnSpan="2" Grid.Row="3" FontWeight="Bold" />
			<TextBox IsReadOnly="True" Text="/ " Grid.Column="13" Grid.ColumnSpan="6" Grid.Row="3" FontWeight="Bold" Margin="0,0,10,0" />
			<RadioButton x:Name="Loyal"			GroupName="Loyauté" IsEnabled="False"				Content="L"		Grid.Column="13" Grid.Row="3" VerticalAlignment="Center" />
			<RadioButton x:Name="FirstNeutre"	GroupName="Loyauté" IsEnabled="False" IsChecked="True" Content="N"	Grid.Column="14" Grid.ColumnSpan="2" Grid.Row="3" VerticalAlignment="Center" />
			<RadioButton x:Name="Chaotique"		GroupName="Loyauté" IsEnabled="False"				Content="C"		Grid.Column="15" Grid.Row="3" VerticalAlignment="Center" />
			<RadioButton x:Name="Bon"			GroupName="Bonté" IsEnabled="False"					Content="B"		Grid.Column="16" Grid.Row="3" VerticalAlignment="Center" />
			<RadioButton x:Name="SecondNeutre"	GroupName="Bonté" IsEnabled="False" IsChecked="True" Content="N"	Grid.Column="17" Grid.Row="3" VerticalAlignment="Center" Margin="0,0,5,0" />
			<RadioButton x:Name="Mauvais"		GroupName="Bonté" IsEnabled="False"					Content="M"		Grid.Column="18" Grid.Row="3" VerticalAlignment="Center" />

			<!-- ### STATS ### -->
			<!-- Titres. -->
			<TextBox IsReadOnly="True" Text="Statistiques" Grid.Column="1" Grid.ColumnSpan="7" Grid.Row="5" FontWeight="Bold" BorderBrush="Black" BorderThickness="1,1,1,1" />
			<TextBox IsReadOnly="True" Text="Caracs" Grid.Column="1" Grid.Row="6" FontWeight="Bold" BorderBrush="Black" BorderThickness="1,0,0,1" />
			<TextBox IsReadOnly="True" Text="Total" Grid.Column="2" Grid.Row="6" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox IsReadOnly="True" Text="Mod" Grid.Column="3" Grid.Row="6" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox IsReadOnly="True" Text="Base" Grid.Column="4" Grid.Row="6" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox IsReadOnly="True" Text="Level" Grid.Column="5" Grid.Row="6" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox IsReadOnly="True" Text="Magie" Grid.Column="6" Grid.Row="6" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox IsReadOnly="True" Text="Temp" Grid.Column="7" Grid.Row="6" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,1,1" />
			<!-- Force. -->
			<TextBox IsReadOnly="True" Text="FOR" Grid.Column="1" Grid.Row="7" FontWeight="Bold" BorderBrush="Black" BorderThickness="1,0,0,1" />
			<TextBox x:Name="Force" IsReadOnly="True" Text="10" Grid.Column="2" Grid.Row="7" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="ModForce" IsReadOnly="True" Text="0" Grid.Column="3" Grid.Row="7" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="BaseFor" IsReadOnly="True" Text="10" Grid.Column="4" Grid.Row="7" BorderBrush="Black" BorderThickness="1,0,1,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="LevelFor" IsReadOnly="True" Text="0" Grid.Column="5" Grid.Row="7" BorderBrush="Black" BorderThickness="0,0,1,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="MagicFor" IsReadOnly="True" Text="0" Grid.Column="6" Grid.Row="7" BorderBrush="Black" BorderThickness="0,0,1,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="TempFor" IsReadOnly="True" Text="0" Grid.Column="7" Grid.Row="7" BorderBrush="Black" BorderThickness="0,0,1,1" LostFocus="Global_LostFocus" />
			<!-- Dextérité. -->
			<TextBox IsReadOnly="True" Text="DEX" Grid.Column="1" Grid.Row="8" FontWeight="Bold" BorderBrush="Black" BorderThickness="1,0,0,1" />
			<TextBox x:Name="Dexterite" IsReadOnly="True" Text="10" Grid.Column="2" Grid.Row="8" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="ModDexterite" IsReadOnly="True" Text="0" Grid.Column="3" Grid.Row="8" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="BaseDex" IsReadOnly="True" Text="10" Grid.Column="4" Grid.Row="8" BorderBrush="Black" BorderThickness="1,0,1,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="LevelDex" IsReadOnly="True" Text="0" Grid.Column="5" Grid.Row="8" BorderBrush="Black" BorderThickness="0,0,1,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="MagicDex" IsReadOnly="True" Text="0" Grid.Column="6" Grid.Row="8" BorderBrush="Black" BorderThickness="0,0,1,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="TempDex" IsReadOnly="True" Text="0" Grid.Column="7" Grid.Row="8" BorderBrush="Black" BorderThickness="0,0,1,1" LostFocus="Global_LostFocus" />
			<!-- Constitution. -->
			<TextBox Text="CON" IsReadOnly="True" Grid.Column="1" Grid.Row="9" FontWeight="Bold" BorderBrush="Black" BorderThickness="1,0,0,1" />
			<TextBox x:Name="Constitution" IsReadOnly="True" Text="10" Grid.Column="2" Grid.Row="9" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="ModConstitution" IsReadOnly="True" Text="0" Grid.Column="3" Grid.Row="9" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="BaseCon" IsReadOnly="True" Text="10" Grid.Column="4" Grid.Row="9" BorderBrush="Black" BorderThickness="1,0,1,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="LevelCon" IsReadOnly="True" Text="0" Grid.Column="5" Grid.Row="9" BorderBrush="Black" BorderThickness="0,0,1,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="MagicCon" IsReadOnly="True" Text="0" Grid.Column="6" Grid.Row="9" BorderBrush="Black" BorderThickness="0,0,1,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="TempCon" IsReadOnly="True" Text="0" Grid.Column="7" Grid.Row="9" BorderBrush="Black" BorderThickness="0,0,1,1" LostFocus="Global_LostFocus" />
			<!-- Intelligence. -->
			<TextBox IsReadOnly="True" Text="INT" Grid.Column="1" Grid.Row="10" FontWeight="Bold" BorderBrush="Black" BorderThickness="1,0,0,1" />
			<TextBox x:Name="Intelligence" IsReadOnly="True" Text="10" Grid.Column="2" Grid.Row="10" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="ModIntelligence" IsReadOnly="True" Text="0" Grid.Column="3" Grid.Row="10" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="BaseInt" IsReadOnly="True" Text="10" Grid.Column="4" Grid.Row="10" BorderBrush="Black" BorderThickness="1,0,1,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="LevelInt" IsReadOnly="True" Text="0" Grid.Column="5" Grid.Row="10" BorderBrush="Black" BorderThickness="0,0,1,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="MagicInt" IsReadOnly="True" Text="0" Grid.Column="6" Grid.Row="10" BorderBrush="Black" BorderThickness="0,0,1,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="TempInt" IsReadOnly="True" Text="0" Grid.Column="7" Grid.Row="10" BorderBrush="Black" BorderThickness="0,0,1,1" LostFocus="Global_LostFocus" />
			<!-- Sagesse. -->
			<TextBox IsReadOnly="True" Text="SAG" Grid.Column="1" Grid.Row="11" FontWeight="Bold" BorderBrush="Black" BorderThickness="1,0,0,1" />
			<TextBox x:Name="Sagesse" IsReadOnly="True" Text="10" Grid.Column="2" Grid.Row="11" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="ModSagesse" IsReadOnly="True" Text="0" Grid.Column="3" Grid.Row="11" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="BaseSag" IsReadOnly="True" Text="10" Grid.Column="4" Grid.Row="11" BorderBrush="Black" BorderThickness="1,0,1,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="LevelSag" IsReadOnly="True" Text="0" Grid.Column="5" Grid.Row="11" BorderBrush="Black" BorderThickness="0,0,1,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="MagicSag" IsReadOnly="True" Text="0" Grid.Column="6" Grid.Row="11" BorderBrush="Black" BorderThickness="0,0,1,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="TempSag" IsReadOnly="True" Text="0" Grid.Column="7" Grid.Row="11" BorderBrush="Black" BorderThickness="0,0,1,1" LostFocus="Global_LostFocus" />
			<!-- Charisme. -->
			<TextBox IsReadOnly="True" Text="CHA" Grid.Column="1" Grid.Row="12" FontWeight="Bold" BorderBrush="Black" BorderThickness="1,0,0,1" />
			<TextBox x:Name="Charisme" IsReadOnly="True" Text="10" Grid.Column="2" Grid.Row="12" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="ModCharisme" IsReadOnly="True" Text="0" Grid.Column="3" Grid.Row="12" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="BaseCha" IsReadOnly="True" Text="10" Grid.Column="4" Grid.Row="12" BorderBrush="Black" BorderThickness="1,0,1,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="LevelCha" IsReadOnly="True" Text="0" Grid.Column="5" Grid.Row="12" BorderBrush="Black" BorderThickness="0,0,1,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="MagicCha" IsReadOnly="True" Text="0" Grid.Column="6" Grid.Row="12" BorderBrush="Black" BorderThickness="0,0,1,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="TempCha" IsReadOnly="True" Text="0" Grid.Column="7" Grid.Row="12" BorderBrush="Black" BorderThickness="0,0,1,1" LostFocus="Global_LostFocus" />

			<!-- ### JETS DE SAUVEGARDE ### -->
			<!-- Titres. -->
			<TextBox IsReadOnly="True" Text="Jets de Sauvegarde" Grid.Column="1" Grid.ColumnSpan="5" Grid.Row="14" FontWeight="Bold" BorderBrush="Black" BorderThickness="1" />
			<TextBox IsReadOnly="True" Text="Caracs" Grid.Column="1" Grid.Row="15" FontWeight="Bold" BorderBrush="Black" BorderThickness="1,0,0,1"/>
			<TextBox IsReadOnly="True" Text="Total" Grid.Column="2" Grid.Row="15" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox IsReadOnly="True" Text="Base" Grid.Column="3" Grid.Row="15" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox IsReadOnly="True" Text="Magie" Grid.Column="4" Grid.Row="15" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox IsReadOnly="True" Text="Temp" Grid.Column="5" Grid.Row="15" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,1,1" />
			<!-- Force. -->
			<TextBox IsReadOnly="True" Text="    FOR" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="16" HorizontalAlignment="Left" FontWeight="Bold" BorderBrush="Black" BorderThickness="1,0,0,1" />
			<CheckBox x:Name="MaitriseJDSFor" IsEnabled="False" Grid.Column="1" Grid.Row="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="1,0,0,0" Checked="MaitriseJDS_Checked" Unchecked="MaitriseJDS_Unchecked"/>
			<TextBox x:Name="JDSFor" IsReadOnly="True" Text="0" Grid.Column="2" Grid.Row="16" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="BaseJDSFor" IsReadOnly="True" Text="0" Grid.Column="3" Grid.Row="16" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="MagieJDSFor" IsReadOnly="True" Text="0" Grid.Column="4" Grid.Row="16" BorderBrush="Black" BorderThickness="1,0,0,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="TempJDSFor" IsReadOnly="True" Text="0" Grid.Column="5" Grid.Row="16" BorderBrush="Black" BorderThickness="1,0,1,1" LostFocus="Global_LostFocus" />
			<!-- Dextérité. -->
			<TextBox IsReadOnly="True" Text="    DEX" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="17" HorizontalAlignment="Left" FontWeight="Bold" BorderBrush="Black" BorderThickness="1,0,0,1"  />
			<CheckBox x:Name="MaitriseJDSDex" IsEnabled="False" Grid.Column="1" Grid.Row="17" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="1,0,0,0" Checked="MaitriseJDS_Checked" Unchecked="MaitriseJDS_Unchecked"/>
			<TextBox x:Name="JDSDex" IsReadOnly="True" Text="0" Grid.Column="2" Grid.Row="17" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="BaseJDSDex" IsReadOnly="True" Text="0" Grid.Column="3" Grid.Row="17" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="MagieJDSDex" IsReadOnly="True" Text="0" Grid.Column="4" Grid.Row="17" BorderBrush="Black" BorderThickness="1,0,0,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="TempJDSDex" IsReadOnly="True" Text="0" Grid.Column="5" Grid.Row="17" BorderBrush="Black" BorderThickness="1,0,1,1" LostFocus="Global_LostFocus" />
			<!-- Constitution. -->
			<TextBox IsReadOnly="True" Text="    CON" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="18" HorizontalAlignment="Left" FontWeight="Bold" BorderBrush="Black" BorderThickness="1,0,0,1" />
			<CheckBox x:Name="MaitriseJDSCon" IsEnabled="False" Grid.Column="1" Grid.Row="18" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="1,0,0,0" Checked="MaitriseJDS_Checked" Unchecked="MaitriseJDS_Unchecked"/>
			<TextBox x:Name="JDSCon" IsReadOnly="True" Text="0"  Grid.Column="2" Grid.Row="18" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="BaseJDSCon" IsReadOnly="True" Text="0" Grid.Column="3" Grid.Row="18" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="MagieJDSCon" IsReadOnly="True" Text="0" Grid.Column="4" Grid.Row="18" BorderBrush="Black" BorderThickness="1,0,0,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="TempJDSCon" IsReadOnly="True" Text="0" Grid.Column="5" Grid.Row="18" BorderBrush="Black" BorderThickness="1,0,1,1" LostFocus="Global_LostFocus" />
			<!-- Intelligence. -->
			<TextBox IsReadOnly="True" Text="    INT" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="19" HorizontalAlignment="Left" FontWeight="Bold" BorderBrush="Black" BorderThickness="1,0,0,1" />
			<CheckBox x:Name="MaitriseJDSInt" IsEnabled="False" Grid.Column="1" Grid.Row="19" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="1,0,0,0" Checked="MaitriseJDS_Checked" Unchecked="MaitriseJDS_Unchecked"/>
			<TextBox x:Name="JDSInt" IsReadOnly="True" Text="0" Grid.Column="2" Grid.Row="19" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="BaseJDSInt" IsReadOnly="True" Text="0" Grid.Column="3" Grid.Row="19" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="MagieJDSInt" IsReadOnly="True" Text="0" Grid.Column="4" Grid.Row="19" BorderBrush="Black" BorderThickness="1,0,0,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="TempJDSInt" IsReadOnly="True" Text="0" Grid.Column="5" Grid.Row="19" BorderBrush="Black" BorderThickness="1,0,1,1" LostFocus="Global_LostFocus" />
			<!-- Sagesse. -->
			<TextBox IsReadOnly="True" Text="    SAG" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="20" HorizontalAlignment="Left" FontWeight="Bold" BorderBrush="Black" BorderThickness="1,0,0,1" />
			<CheckBox x:Name="MaitriseJDSSag" IsEnabled="False" Grid.Column="1" Grid.Row="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="1,0,0,0" Checked="MaitriseJDS_Checked" Unchecked="MaitriseJDS_Unchecked"/>
			<TextBox x:Name="JDSSag" IsReadOnly="True" Text="0" Grid.Column="2" Grid.Row="20" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="BaseJDSSag" IsReadOnly="True" Text="0" Grid.Column="3" Grid.Row="20" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="MagieJDSSag" IsReadOnly="True" Text="0" Grid.Column="4" Grid.Row="20" BorderBrush="Black" BorderThickness="1,0,0,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="TempJDSSag" IsReadOnly="True" Text="0" Grid.Column="5" Grid.Row="20" BorderBrush="Black" BorderThickness="1,0,1,1" LostFocus="Global_LostFocus" />
			<!-- Charisme. -->
			<TextBox IsReadOnly="True" Text="    CHA" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="21" HorizontalAlignment="Left" FontWeight="Bold" BorderBrush="Black" BorderThickness="1,0,0,1" />
			<CheckBox x:Name="MaitriseJDSCha" IsEnabled="False" Grid.Column="1" Grid.Row="21" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="1,0,0,0" Checked="MaitriseJDS_Checked" Unchecked="MaitriseJDS_Unchecked"/>
			<TextBox x:Name="JDSCha" IsReadOnly="True" Text="0" Grid.Column="2" Grid.Row="21" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="BaseJDSCha" IsReadOnly="True" Text="0" Grid.Column="3" Grid.Row="21" BorderBrush="Black" BorderThickness="0,0,0,1" />
			<TextBox x:Name="MagieJDSCha" IsReadOnly="True" Text="0" Grid.Column="4" Grid.Row="21" BorderBrush="Black" BorderThickness="1,0,0,1" LostFocus="Global_LostFocus" />
			<TextBox x:Name="TempJDSCha" IsReadOnly="True" Text="0" Grid.Column="5" Grid.Row="21" BorderBrush="Black" BorderThickness="1,0,1,1" LostFocus="Global_LostFocus" />

			<!-- ### MAITRISE ### -->
			<TextBox IsReadOnly="True" Text="Maîtrise" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="23" FontWeight="Bold" BorderBrush="Black" BorderThickness="1,1,1,1" />
			<TextBox x:Name="Maitrise" IsReadOnly="True" Text="+2" Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="23" FontWeight="Bold" BorderBrush="Black" BorderThickness="0,1,1,1" />

			<!-- ### DES DE VIE ### -->
			<!-- Titres. -->
			<TextBox IsReadOnly="True" Text="Dé(s)" Grid.Column="7" Grid.Row="14" FontWeight="Bold" BorderBrush="Black" BorderThickness="1,1,1,0" />
			<TextBox IsReadOnly="True" Text="Vie" Grid.Column="7" Grid.Row="15" FontWeight="Bold" BorderBrush="Black" BorderThickness="1,0,1,1" />
